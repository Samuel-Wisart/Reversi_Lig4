{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "F:/msys64/mingw64/bin/mingw32-make.exe",  // Caminho completo para o make
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}/project"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "F:/msys64/mingw64/bin/mingw32-make.exe",  // Caminho completo para o make
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/project"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "clean-objects",
            "type": "shell",
            "command": "F:/msys64/mingw64/bin/mingw32-make.exe",  // Caminho completo para o make
            "args": [
                "clean-objects"
            ],
            "options": {
                "cwd": "${workspaceFolder}/project"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "F:/msys64/mingw64/bin/g++.exe",  // Ajuste o caminho do g++ para o do MSYS2
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "run-tests",
            "type": "shell",
            "command": "${workspaceFolder}/project/tests_exe.exe", // Substitua pelo caminho correto do execut√°vel de testes
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/project"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
