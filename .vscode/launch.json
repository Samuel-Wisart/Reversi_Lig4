{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/project/bin/teste",  // Ajuste conforme necess√°rio
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/project",
            "environment": [],
